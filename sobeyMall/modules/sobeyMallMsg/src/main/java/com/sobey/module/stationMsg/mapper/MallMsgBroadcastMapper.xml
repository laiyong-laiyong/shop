<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sobey.module.stationMsg.mapper.MallMsgBroadcastMapper">

    <delete id="deleteMsg">
        delete from mall_msg_broadcast where uuid in (
        <foreach collection="uuids" item="uuid" separator=",">
            #{uuid}
        </foreach>
        )
    </delete>

    <select id="page" resultType="com.sobey.module.stationMsg.model.MallMsgBroadcast">
        select * from mall_msg_broadcast order by createTime desc
    </select>

</mapper>
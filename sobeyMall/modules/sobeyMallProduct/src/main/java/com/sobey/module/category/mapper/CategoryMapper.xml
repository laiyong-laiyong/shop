<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sobey.module.category.mapper.CategoryMapper">

	
	
	
	
	<select id="page" resultType="com.sobey.module.category.model.Category" parameterType="com.sobey.module.category.model.Category">
		select
			*
		from mall_product_category ct
		<where>
				<if test="name != null and name != ''"> and ct.name like    CONCAT('%',#{name},'%')    </if>
		</where>
		order by ct.`order`
	</select>
	
	
	
</mapper>